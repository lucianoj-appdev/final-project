
<!-- Code for Google Map -->
<script src="https://maps.googleapis.com/maps/api/js?v=3.exp&key=AIzaSyB_nAWVr-18Oi_XoadzVHmNT2vevvJfev4"></script>
<script>
  var map;
  function initialize() {
    var myLatlng = new google.maps.LatLng(<%= @latitude %>, <%= @longitude %>);
    var mapOptions = {
      zoom: 15,
      center: myLatlng
    };
    map = new google.maps.Map(document.getElementById('map-canvas'),
    mapOptions);
    var marker = new google.maps.Marker({
      position: myLatlng,
      map: map,
      title: 'Statue of Liberty'
    });
  }
  google.maps.event.addDomListener(window, 'load', initialize);
</script>



<div class="card">
  <div class="card-header text-center pr-0 pl-0">
    <div class="container">
      <div class="row">
        <div class="col text-left">
          <a class="btn btn-danger" role="button" href="/delete_location/<%= @location.id %>">
            <i class="fas fa-times"></i>
          </a>
        </div>
        <div class="col-8 text-center">
          <b><%= @location.name %></b> <%= @location.address %>
        </div>
        <div class="col text-right">
          <a class="btn btn-primary" role="button" href="/locations/<%= @location.id %>/edit">
            <i class="fas fa-edit"></i>
          </a>
        </div>
      </div>
    </div>
  </div>
  <div class="card body">
        <div id="map-canvas" style="width: 100%; height: 400px"></div>
  </div>
</div>