<h1>
  All routes
</h1>

<a href="/routes/new">
  Add a new route
</a>

<hr>

<table class="table">
  <tr>
    <th>
      Start
    </th>

    <th>
      End
    </th>

    <th>
    </th>
  </tr>

  <% @routes.each do |route| %>
  <tr>
    <td>
      <a href="/locations/<%= route.start_id %>">
      <%= Location.find(route.start_id).name %>
      </a>
    </td>

    <td>
      <a href="/locations/<%= route.end_id %>">
      <%= Location.find(route.end_id).name %>
      </a>
    </td>

    <td>
      <a href="/routes/<%= route.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
